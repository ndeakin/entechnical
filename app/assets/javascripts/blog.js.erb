$(document).ready( function(){

	if ( ($('#content').height() + $('#navigation').height()) 
				< $(window).height())
	{
		if ( ($('#content').height() + $('#navigation').height() 
						+ $('#footer').height() ) < $(window).height()) {
			$('#content').height( $(window).height() 
					- $('#footer').height()
					- $('#navigation').height()
					- parseInt( $('#content').css('marginBottom') ) );
		}
		else {
			$('#content').height( $(window).height() 
					- $('#navigation').height()
					- parseInt( $('#content').css('marginBottom') ) );
		}
	}
